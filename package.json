{
	"name": "catalog-service",
	"version": "1.0.0",
	"description": "Catalog service for the pizza delivery app",
	"main": "dist/server.js",
	"scripts": {
		"test": "cross-env NODE_ENV=test jest --watchAll=true --runInBand",
		"dev": "nodemon src/server.ts",
		"start": "node dist/server.js",
		"build": "tsc",
		"format:fix": "prettier --write .",
		"format:check": "prettier . --check",
		"lint:check": "eslint .",
		"lint:fix": "eslint . --fix",
		"prepare": "husky install",
		"start:DB": "docker run --rm --name mernmongo-container -e MONGO_INITDB_ROOT_USERNAME=root -e MONGO_INITDB_ROOT_PASSWORD=root -v mernmongodata:/data/db -p 27017:27017 -d mongo:6",
		"stop:DB": "docker stop mernmongo-container",
		"reset:DB": "docker volume rm -f mermongodata && docker volume create mernmongodata"
	},
	"author": "Roshan Kumar",
	"license": "ISC",
	"engines": {
		"node": ">=22.10.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.28.0",
		"@types/config": "^3.3.5",
		"@types/cookie-parser": "^1.4.9",
		"@types/express": "^5.0.3",
		"@types/http-errors": "^2.0.5",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.29",
		"@types/supertest": "^6.0.3",
		"eslint": "^9.28.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"lint-staged": "^16.1.0",
		"nodemon": "^3.1.10",
		"prettier": "3.5.3",
		"ts-jest": "^29.3.4",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.1"
	},
	"lint-staged": {
		"*.ts": [
			"npm run format:fix",
			"npm run lint:fix"
		]
	},
	"dependencies": {
		"config": "^4.1.1",
		"cookie-parser": "^1.4.7",
		"cross-env": "^10.0.0",
		"express": "^5.1.0",
		"express-jwt": "^8.5.1",
		"express-validator": "^7.2.1",
		"http-errors": "^2.0.0",
		"i": "^0.3.7",
		"js-yaml": "^4.1.0",
		"jwks-rsa": "^3.2.0",
		"mongoose": "^8.17.1",
		"supertest": "^7.1.1",
		"winston": "^3.17.0"
	}
}
